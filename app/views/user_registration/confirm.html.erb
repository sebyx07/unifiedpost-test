<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="well">
        <h3>User information</h3>

        <p>First name: <%= @user.first_name %></p>
        <p>Last name: <%= @user.last_name %></p>
        <p>Email: <%= @user.email %></p>
        <p>Country: <%= @user.country_id %></p>
        <p>City: <%= @user.city %></p>
        <p>Confirmed: <%= @user.confirm %></p>

        <% unless @user.confirm %>
          <%= button_to 'Invalid', user_registration_confirm_decline_path , method: :post, class: 'btn btn-danger' %>
          <br />
          <%= button_to 'Confirm by email', user_registration_send_confirm_email_path(user_id: @user), method: :post, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
</div>